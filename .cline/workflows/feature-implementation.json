{
  "name": "feature-implementation",
  "description": "Full development lifecycle: discovery, implementation, testing, and sync",
  "steps": [
    {
      "step": 1,
      "name": "Discovery Phase",
      "action": "execute_workflow",
      "target": "discovery",
      "purpose": "Map implementation path and dependencies"
    },
    {
      "step": 2,
      "name": "Skill Selection",
      "action": "read_file",
      "target": "src/docs/core/cline-skills.md",
      "purpose": "Identify required skills for implementation"
    },
    {
      "step": 3,
      "name": "Pre-flight Check",
      "action": "verify",
      "checks": [
        "Boot sequence complete",
        "Discovery report exists",
        "Skills identified"
      ]
    },
    {
      "step": 4,
      "name": "Implementation",
      "action": "implement",
      "guidelines": [
        "Follow Meta-Heuristics from src/docs/core/meta-heuristics.md",
        "Apply Safeguards at each mutation",
        "Verify no Critical Invariant violations",
        "Test incrementally"
      ]
    },
    {
      "step": 5,
      "name": "Documentation Sync",
      "action": "update_docs",
      "targets": ["T2 Architecture", "T3 Protocols"],
      "condition": "If API signatures changed"
    },
    {
      "step": 6,
      "name": "Memory Log",
      "action": "append_file",
      "target": "src/docs/history/memory.md",
      "content": "* [NEW]: Implemented {feature} with {skills}"
    },
    {
      "step": 7,
      "name": "Repository Sync",
      "action": "execute_workflow",
      "target": "repository-sync",
      "purpose": "Push changes to AxisRotunda/Qualia"
    }
  ]
}
