{
  "name": "boot-sequence",
  "description": "Initialize agent context by ingesting documentation from T0 Kernel through T4 Memory",
  "steps": [
    {
      "step": 1,
      "name": "Read T0 Kernel",
      "action": "read_file",
      "target": "src/docs/kernel.md",
      "purpose": "Load Axial Directives and constitutional constraints"
    },
    {
      "step": 2,
      "name": "Read T1 BIOS",
      "action": "read_file",
      "target": "src/docs/core/system-instructions.md",
      "purpose": "Initialize cognitive interface and boot sequence"
    },
    {
      "step": 3,
      "name": "Read T1 Topology",
      "action": "read_file",
      "target": "src/docs/core/project-hierarchy.md",
      "purpose": "Establish navigational discovery map"
    },
    {
      "step": 4,
      "name": "Read T4 Memory",
      "action": "read_file",
      "target": "src/docs/history/memory.md",
      "purpose": "Load active process context and recent operations"
    },
    {
      "step": 5,
      "name": "Check FS Manifest",
      "action": "read_file",
      "target": "src/docs/core/fs-manifest.json",
      "purpose": "Verify pending file operations"
    },
    {
      "step": 6,
      "name": "Status Report",
      "action": "report",
      "content": "Agent initialized. Phase: {memory.phase}, Identity: {memory.identity}, Directive: {memory.directive}"
    }
  ]
}
