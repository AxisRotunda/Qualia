{
  "name": "documentation-audit",
  "description": "Sync documentation across tiers and verify link integrity",
  "steps": [
    {
      "step": 1,
      "name": "Tier 0 Audit",
      "action": "read_file",
      "target": "src/docs/kernel.md",
      "verify": "All Axial Directives present, Safeguards documented"
    },
    {
      "step": 2,
      "name": "Tier 1 Scan",
      "action": "list_files",
      "path": "src/docs/core",
      "verify": "All navigation files exist"
    },
    {
      "step": 3,
      "name": "Tier 2 Blueprint Check",
      "action": "list_files",
      "path": "src/docs/architecture",
      "verify": "Technical specs match current implementation"
    },
    {
      "step": 4,
      "name": "Tier 3 Protocol Verify",
      "action": "list_files",
      "path": "src/docs/protocols",
      "verify": "Domain engines documented"
    },
    {
      "step": 5,
      "name": "Link Integrity Check",
      "action": "search_files",
      "path": "src/docs",
      "pattern": "\\[.+?\\]\\(\\.\\/.+?\\.md\\)",
      "purpose": "Find all markdown links"
    },
    {
      "step": 6,
      "name": "Verify Links",
      "action": "verify_links",
      "approach": "Check each linked file exists at relative path"
    },
    {
      "step": 7,
      "name": "Prune Memory",
      "action": "read_file",
      "target": "src/docs/history/memory.md",
      "maintenance": "Keep only last 10 significant entries"
    },
    {
      "step": 8,
      "name": "Drift Detection",
      "action": "compare",
      "compare": "Code implementation vs Documentation",
      "report": "List contradictions or outdated docs"
    },
    {
      "step": 9,
      "name": "Update Report",
      "action": "report",
      "content": "Documentation audit complete. Issues: {issue_count}, Orphans: {orphan_count}"
    }
  ]
}
